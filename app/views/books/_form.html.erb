<div class="container mt-3">
  <div class="row"> 
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <%= form_for(@book, html: { class: "form-group" }) do |f| %>
        <div class="field">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <% if @authors.present? %>
          <div class="field mt-2">
            <p>List of Books</p>
            <% @authors.each do |author| %>
              <%= check_box_tag "book[author_ids][]", author.id , !@book.new_record? && @book.author_ids.include?(author.id) , { id: author.slug } %>
              <label for='<%= author.slug %>'>
                  <%= author.first_name  %>
              </label>
            <% end %>
          </div>
        <% end %>

        <div class="field mt-2">
          <%= f.submit "Submit", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
    <div class="col-md-4"></div>
  </div>
</div>